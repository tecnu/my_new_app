      <h2 class="intro-text text-center">Contact
      <strong>the bake shop</strong>
      </h2>
    <hr>
  </div>
  
  <div class="col-md-8">
    <%= image_tag("sanfran.jpg", class: "img-responsive img-contact") %>
  </div>
  
  <div class="col-md-4">
    
