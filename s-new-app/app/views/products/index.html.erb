<p id="notice"><%= notice %></p>

<h1>Products</h1>

<div class="container-fluid">

  <div class="row">
    <% @products.each do |product| %>
      <div class="col-md-3">
        <div class="thumbnail">
        <%= image_tag(product.image_url, class: "img-responsive") unless product.image_url.blank? %>
          <div class="caption">
            <h2><%= product.name %></h2>
            <p><%= product.description %></p>
            <p><%= number_to_currency(product.price) %></p>
            <%= link_to 'Show', product, class: "btn btn-link" %>
            <%= link_to 'Edit', edit_product_path(product), class: "btn btn-link" %>
            <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-link" %>
           </div>
         </div>
       </div>
    <% end %>
  </div>

<br>

<%= link_to 'New Product', new_product_path, class: "btn btn-link" %>
