<% if signed_in? %>
  <h3>Add a review:</h3>
  <%= form_for([@product, @product.comments.build], remote: true) do |f| %>
    <p>
      <%= f.label :body, "Comments" %><br>
      <%= f.text_area :body, class: "form-control comments" %>
    </p>
    
    <p>
      <div class="rating" style="padding-left: 30px;"></div>
    </p>
    
    
    <p>
      <%= f.submit "Submit", class: "btn btn-primary" %>
    </p>
    
  <% end %>
<% end %>