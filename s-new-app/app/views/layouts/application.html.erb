<!DOCTYPE html>
<html>
  <head>
    <title>MyNewApp</title>
    <%= csrf_meta_tags %>
    
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
    
    <meta name="viewport" content="width=device-width, initial-scale=1">
  </head>
  
  
  <body>
      
   <div class="brand">The Bake Shop</div>
    

    <!-- Navigation -->
    <nav class="navbar navbar-default" role="navigation">
        <div class="container">
            
            
            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav">
                    <li>
                        <%= link_to 'Home', root_path %>
                    </li>
                    <li>
                        <%= link_to 'About', static_pages_about_path %>
                    </li>
                    <li>
                        <%= link_to 'Products', products_path %>
                    </li> 
                    <li>
                        <%= link_to 'Contact', static_pages_contact_path %>
                    </li>
                    
                    <!-- Login -->
                    <li>
                        <% if user_signed_in? %>
                        <%= link_to('Logout', destroy_user_session_path, method: :delete) %>
                        <% else %>
                        <%= link_to('Login', new_user_session_path) %>
                        <% end %>
                    </li>
                    
                    <!-- Signup -->
                    <li>    
                        <% if user_signed_in? %>
                        <%= link_to 'Edit', edit_user_registration_path %>
                        <% else %>
                        <%= link_to('Sign up', new_user_registration_path) %>
                        <% end %>
                    </li>
                </ul>
                
                <!-- Form -->
                <div class="field form-group">
                    <%= form_tag("/products", method: "get", :class => "navbar-form") do %>
                        <%= label_tag(:q, "Search for:", :class => "search") %> 
                        <%= text_field_tag(:q, nil, :class => "form-control")%>
                        <%= submit_tag("Search", :class => "btn btn-default") %>
                    <% end %>
                </div>
                
            </div>
            <!-- /.navbar-collapse -->
        </div>
        <!-- /.container -->
    </nav>
    
    <!-- Flash Notice Tags -->
    <% if notice %>
      <div id="notice" class="animated fadeOut alert alert-success" role="alert"><%= notice %><%= alert %></div>
    <% end %>    
    <% if alert %>
      <div id="alert" class="animated fadeOut alert alert-danger" role="alert"><%= notice %><%= alert %></div>
    <% end %>     
    
    
    <%= yield %>
    
  
     <footer>
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <p>Copyright &copy; The Bake Shop 2017</p>
                </div>
            </div>
        </div>
    </footer>
    
  </body>
</html>